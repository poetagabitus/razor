@model IOrderedEnumerable<string>

@Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

@foreach (var categoryName in Model)
{
    @Html.RouteLink(categoryName, new
    {
        controller = "Product",
        action = "List",
        category = categoryName,
        page = 1
    },
        new
        {
            @class = "btn btn-block btn-default btn-lg" + (categoryName == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
}